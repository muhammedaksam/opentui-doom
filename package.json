{
  "name": "@muhammedaksam/opentui-doom",
  "version": "0.3.7",
  "description": "Play DOOM in your terminal using OpenTUI's framebuffer rendering and doomgeneric WASM",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "opentui-doom": "./src/index.ts"
  },
  "files": [
    "src",
    "doom/build",
    "doom/doomgeneric_opentui.c",
    "doom/doom_js_sound_bridge.c",
    "doom/i_sound.c",
    "doom/i_system.c",
    "doom/s_sound.c",
    "sound",
    "scripts"
  ],
  "author": "Muhammed Mustafa AKÅžAM <info@muhammedaksam.com.tr> (https://github.com/muhammedaksam)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muhammedaksam/opentui-doom.git"
  },
  "bugs": {
    "url": "https://github.com/muhammedaksam/opentui-doom/issues"
  },
  "homepage": "https://github.com/muhammedaksam/opentui-doom#readme",
  "keywords": [
    "doom",
    "terminal",
    "tui",
    "opentui",
    "wasm",
    "webassembly",
    "game",
    "retro",
    "cli",
    "console",
    "framebuffer",
    "doomgeneric"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:debug": "DOOM_DEBUG=1 bun run --watch src/index.ts",
    "build:doom": "bash ./scripts/build-doom.sh",
    "build": "bun build src/index.ts --outdir dist --target node",
    "typecheck": "bun x tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "start": "bun run src/index.ts",
    "prepublishOnly": "bun run build:doom"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "eslint": "^10.0.0",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.50.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@opentui/core": "^0.1.61"
  },
  "engines": {
    "bun": ">=1.0"
  }
}
